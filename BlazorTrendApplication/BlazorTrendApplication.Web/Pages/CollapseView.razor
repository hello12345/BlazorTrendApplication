@page "/collapseview"
@attribute [Authorize]
<div class="container">
    <div class="row">
         <div class="col-sm-3">
             <h3>Grid Data</h3>
         </div>
 <div class="col-sm-2 offset-7">
         <button class="btn btn-info" @onclick="e => this.Collapsed = !this.Collapsed" style="float: right;color: white;">
            @( this.Collapsed ? "Edit" : "Done") <Icon Name="@("fa-pen")" />
        </button>
    </div>
</div>
</div>
<GridData Collapse="@( this.Collapsed ? "collapse": "")"></GridData>

@code {
    protected bool Collapsed = true;
}
