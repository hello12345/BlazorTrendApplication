@page "/MapTest"
@inject IJSRuntime JSRuntime
@attribute [Authorize]
<div class="container">
    <h1>Display Google Map</h1>
    <div class="row m-3">
        <input class="form-control" name="searchMap" id="searchMap" />
    </div>

    <div id="map" style="height:500px;width:100%;">
    </div>
</div>

<hr />

<Carousel @bind-SelectedSlide="@selectedSlide" style="width: 450px;" Autoplay="false">
    <CarouselSlide Name="1">
        <Image Source="Image/P5.jpeg" Text="Lights" Display="Display.Block" Width="Width.Is100" style="width:100%;height: 200px;" />
    </CarouselSlide>
    <CarouselSlide Name="2">
        <Image Source="Image/P6.jpg" Text="Keyboard" Display="Display.Block" Width="Width.Is100" style="width:100%;height: 200px;" />
    </CarouselSlide>
    <CarouselSlide Name="3">
        <Image Source="Image/P7.jpg" Text="Road" Display="Display.Block" Width="Width.Is100" style="width:100%;height: 200px;" />
    </CarouselSlide>
</Carousel>

@code {
    protected bool Collapsed = true;
    protected string selectedSlide = "2";
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initialize", null);
            StateHasChanged();
        }
    }
}