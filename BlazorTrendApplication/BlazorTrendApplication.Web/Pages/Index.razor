@page "/"
@inherits IndexBase

<AuthorizeView>
    <Authorized>
        @if (trends == null)
        {
            <div class="spinner"></div>
        }
        else
        {
            <div class="container">
                @foreach (var trend in trends)
                {
                    <div class="card mt-3">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="thumbnail">
                                    <a href="" target="_blank">
                                        <img src="@trend.ImgFile" alt="Lights" style="width:100%;height: 200px;">
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-9 trenddiv">
                                <h4>@trend.Title</h4>
                                <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;max-width: 100ch;">
                                    @trend.Introduction
                                </p>
                                <p>@trend.Summary</p>
                                @*<div class="bottom">
                                    <span><strong>Price:</strong>&nbsp;@trend.Price&nbsp;&nbsp;</span>
                                    <button class="btn btn-outline-secondary btn-sm mb-2" @onclick="() => openShareTrend(trend.Id)">
                                        <i class="fa fa-envelope"
                                   aria-hidden="true" style="font-size:20px;"></i>&nbsp;Email
                                    </button>
                                </div>*@
                            </div>
                        </div>
                    </div>
                }
             
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <Login></Login>
    </NotAuthorized>
</AuthorizeView>
